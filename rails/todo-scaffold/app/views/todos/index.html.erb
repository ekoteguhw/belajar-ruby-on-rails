<p id="notice"><%= notice %></p>

<h1>List Todo</h1>
<%= link_to 'New Todo', new_todo_path, class: 'btn btn-sm btn-primary' %>

<% @todos.each do |todo| %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-9"><%= todo.title %></div>
        <div class="col-sm-3">
          <% if todo.completed %>
            status: <%= fa_icon "check-circle" %>
          <% else %>
            status: <%= fa_icon "times-circle" %>
          <% end %>
          <div class="pull-right">
            <%= link_to 'Edit', edit_todo_path(todo), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
